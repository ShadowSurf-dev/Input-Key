{
  "manifest_version": 3,
  "name": "Input Key Recorder",
  "version": "1.0",
  "description": "Displays arrow key inputs (and more) when the extension is clicked.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to run input recorder",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
